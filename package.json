{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential applications - Framework agnostic, wagmi-like structure for encrypted computations",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev:sdk": "cd packages/fhevm-sdk && npm run dev",
    "test": "cd packages/fhevm-sdk && npm test",
    "typecheck": "cd packages/fhevm-sdk && npm run typecheck",
    "clean": "rm -rf packages/*/dist packages/*/node_modules examples/*/node_modules node_modules"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "zama",
    "blockchain",
    "ethereum",
    "web3",
    "sdk",
    "react",
    "vue",
    "nextjs",
    "universal"
  ],
  "author": "FHEVM Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fhevm-universal-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/fhevm-universal-sdk/issues"
  },
  "homepage": "https://github.com/your-username/fhevm-universal-sdk#readme",
  "devDependencies": {
    "typescript": "^5.4.5"
  }
}
